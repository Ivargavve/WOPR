# ============================================
# WOPR - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ----------------------
# AI Backend (Google Gemini)
# ----------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Gemini model to use (default: gemini-pro)
# Options: gemini-pro, gemini-pro-vision
GEMINI_MODEL=gemini-pro

# ----------------------
# AI Persona Configuration
# ----------------------
# The wake word and display name for your AI assistant
# Default: Joshua (WarGames reference)
AI_PERSONA_NAME=Joshua

# ----------------------
# Application Settings
# ----------------------
# Enable debug mode (shows extra logging)
DEBUG_MODE=false

# Screen capture interval in milliseconds (default: 30000 = 30 seconds)
CAPTURE_INTERVAL_MS=30000

# ----------------------
# Privacy Settings
# ----------------------
# List of process names to auto-pause vision (comma-separated)
# Example: 1Password,KeePass,Banking
PRIVACY_APPS=1Password,KeePass,Bitwarden

# ----------------------
# Optional Integrations
# ----------------------
# Spotify (for Music Player mode)
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Discord (for Chat Hub mode)
# DISCORD_TOKEN=your_discord_token

# Slack (for Chat Hub mode)
# SLACK_API_TOKEN=xoxp-your-slack-token

# OBS WebSocket (for Control Deck mode)
# OBS_WEBSOCKET_URL=ws://localhost:4455
# OBS_WEBSOCKET_PASSWORD=your_obs_password

# ----------------------
# Development
# ----------------------
# Tauri development server port
VITE_DEV_SERVER_PORT=1420

# Enable hot reload in development
VITE_HMR=true
